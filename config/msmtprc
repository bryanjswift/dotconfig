# All accounts inherit defaults
defaults
auth on
port 587
protocol smtp
tls on
tls_starttls on

# Accounts hosted by fastmail should inherit these
account fastmail
host mail.messagingengine.com
tls_fingerprint 95:8B:16:01:56:3A:EF:92:60:7A:41:EB:5B:AD:22:E3:CA:CE:84:31

