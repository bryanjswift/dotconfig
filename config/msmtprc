# All accounts inherit defaults
defaults
auth on
port 465
protocol smtp
tls on
tls_starttls on

# Accounts hosted by fastmail should inherit these
account fastmail
host mail.messagingengine.com
tls_starttls off
tls_fingerprint 95:8B:16:01:56:3A:EF:92:60:7A:41:EB:5B:AD:22:E3:CA:CE:84:31

# Accounts hosted by gmail should inherit these
account gmail
host smtp.gmail.com
tls_starttls off
tls_fingerprint 2D:E6:23:0F:F1:BF:38:FD:BF:D4:86:23:71:33:52:09:CF:E7:9C:4F

