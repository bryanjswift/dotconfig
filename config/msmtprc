# All accounts inherit defaults
defaults
auth on
port 465
protocol smtp
tls on
tls_starttls on

# Accounts hosted by fastmail should inherit these
account fastmail
host mail.messagingengine.com
tls_starttls off
tls_fingerprint 54:13:75:24:FE:72:1F:0C:BB:8A:6A:0E:1E:28:0A:DE:50:48:2E:29

