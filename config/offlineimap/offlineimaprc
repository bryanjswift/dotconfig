[general]
# Basic Settings
accounts = fastmail, gmail, siberia
maxsyncaccounts = 1
ui = ttyui
#ui = blinkenlights
# Advanced Settings
pythonfile=~/.offlineimap/helpers.py
fsync = False

[Account fastmail]
