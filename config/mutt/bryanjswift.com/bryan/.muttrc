# Load global defaults
source $HOME/Documents/code/dotconfig/config/mutt/muttrc
source $HOME/Documents/code/dotconfig/config/mutt/crypto

set pgp_sign_as=0xF9A56D56
my_hdr X-PGP-Key: https://bryanjswift.com/pubkey.asc

# * Override globals *
set status_format = "%f%r [ %m msgs%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%> %?p?( %p postponed )?  bryan@bryanjswift.com"

#
# Paths ----------------------------------------------
set folder           = /Volumes/Mail/fastmail.fm/bryanjswift  # mailbox location
#
# Account Settings -----------------------------------
#
# Default inbox.
set spoolfile = "+Inbox"
# Mailboxes to show in the sidebar.
mailboxes +INBOX \
          +Archive \
          +Archive/moving-2020 \
          +Archive/taxes-2019 \
          +Archive/taxes-2020 \
          +Archive/travel \
          +drafts \
          +sent \

# Other special folders.
set mbox      = "+Archive"
set postponed = "+drafts"
set record    = "+sent"
#
# Index Key Bindings ---------------------------------
#
# Sync email
macro index O "<shell-escape>mbsync fastmail<enter>"               "run mbsync to sync all mail"
macro index o "<shell-escape>mbsync fastmail-default:INBOX<enter>" "run mbsync to sync inbox"
#
# Compose View Options -------------------------------
set from     = "bryan@bryanjswift.com"
set sendmail = "/usr/local/bin/msmtp -a bryan-bryanjswift"
